extends layout

block content
  h1 Log In
  form(method='POST' action='')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text' placeholder='username' name='username' required='true')
      label(for='family_name') Password:
      input#password.form-control(type='text' placeholder='password' name='password' required='true')
      button.btn(type="submit") Log In
  div  
    p No account? Sign Up here
    a.btn(href='/signup') signup